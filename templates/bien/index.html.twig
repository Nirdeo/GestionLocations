{% extends 'base.html.twig' %}

{% block title %}Locataires - Modification{% endblock %}

{% block assets %}
    <script src={{ asset("assets/js/bien.js") }}></script>{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div><h1>3 biens</h1>
            <p>Ville:
                <select class="form-select" aria-label="Default select example">
                    <option selected>Open this select menu</option>
                    <option value="1">One</option>
                    <option value="2">Two</option>
                    <option value="3">Three</option>
                </select>
            </p>
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
                <label class="form-check-label" for="flexSwitchCheckDefault">Actuellement louées</label>
            </div>
            <button type="button" class="btn btn-primary">Afficher</button>
            <button type="button" class="btn btn-success">Ajouter un bien</button>
        </div>
        <div class="row">
            <div class="col-md-6">
                {% for location in locations %}
                    <div class="row">
                        <div class="col-md-6">
                            <img src="{{ asset('assets/img/pexels-1571460.png') }}">
                        </div>
                        <div class="col-md-6">
                            <h1>{{ location.residence.name }}</h1>
                            <p>Disponible le {{ location.departureDate|date('d/m/Y') }}</p>
                            <p>Géré par {{ location.tenant.firstName }} {{ location.tenant.lastName }}</p>
                            <p><a href="{{ path('app_bien_edit', {'id': location.id}) }}" type="button"
                                  class="btn btn-red">Accéder</a></p>
                        </div>
                    </div>
                    <br>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
