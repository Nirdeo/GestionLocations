{% extends 'base.html.twig' %}

{% block title %}Locataires - Modification{% endblock %}

{% block assets %}
    <script src={{ asset("assets/js/bien.js") }}></script>{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6">
                {{ form_start(form) }}
                {{ form_row(form.name) }}
                {{ form_row(form.address) }}
                <div class="row">
                    <div class="col-md-6">
                    {{ form_row(form.zipCode) }}
                    </div>
                    <div class="col-md-6">
                    {{ form_row(form.city) }}
                    </div>
                </div>
                {{ form_row(form.country) }}
                {{ form_row(form.inventoryFile) }}
                {{ form_row(form.picture) }}
                {{ form_row(form.submit) }}
                {{ form_end(form) }}
            </div>
            <div class="col-md-6">
                <table id="myTable" class="table table-striped" style="width:100%">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>Date entrée</th>
                        <th>Date sortie</th>
                        <th>Locataire</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for location in locations %}
                        <tr>
                            <td><strong>{{ location.id }}</strong></td>
                            <td>{{ location.arrivalDate|date('d/m/Y') }}</td>
                            <td>{{ location.departureDate|date('d/m/Y') }}</td>
                            <td>{{ location.tenant.firstName }} {{ location.tenant.lastName }}</td>
                            <td><a href="#" type="button" class="btn btn-red">Accéder</a></td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="8">Aucun locataire</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
