{% extends 'base.html.twig' %}

{% block title %}Biens - Affichage{% endblock %}

{% block assets %}
    <script src={{ asset("assets/js/bien.js") }}></script>{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6">
                <h1>Bien</h1>
            <table id="myTable" class="table table-striped" style="width:100%">
                <tbody>
                <tr>
                    <th>ID</th>
                    <td>{{ bien.id }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ bien.name }}</td>
                </tr>
                <tr>
                    <th>Adresse</th>
                    <td>{{ bien.address }}</td>
                </tr>
                <tr>
                    <th>Code Postal</th>
                    <td>{{ bien.zipCode }}</td>
                </tr>
                <tr>
                    <th>Ville</th>
                    <td>{{ bien.city }}</td>
                </tr>
                <tr>
                    <th>Pays</th>
                    <td>{{ bien.country }}</td>
                </tr>
                <tr>
                    <th>Inventaire</th>
                    <td>{{ bien.inventoryFile }}</td>
                </tr>
                <tr>
                    <th>Photo</th>
                    <td>{{ bien.picture }}</td>
                </tr>
                </tbody>
            </table>
        </div>
            <div class="col-md-6">
                <h1>Résidence Saint-Vincent</h1>
                <button type="button" class="btn btn-secondary">Disponible à la location</button>
                <button type="button" class="btn btn-success">Ajouter une location</button>
                <h1>{{ bien.residences.count }} Locations</h1>
                <table id="myTable" class="table table-striped" style="width:100%">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>Date entrée</th>
                        <th>Date sortie</th>
                        <th>Locataire</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for location in locations %}
                        <tr>
                            <td><strong>{{ location.id }}</strong></td>
                            <td>{{ location.arrivalDate|date('d/m/Y') }}</td>
                            <td>{{ location.departureDate|date('d/m/Y') }}</td>
                            <td>{{ location.tenant.firstName }} {{ location.tenant.lastName }}</td>
                            <td><a href="#" type="button" class="btn btn-red">Accéder</a></td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="8">Aucun locataire</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
