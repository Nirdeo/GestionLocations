{% extends 'base.html.twig' %}

{% block title %}Mandataires - Ajout{% endblock %}

{% block assets %}
    <script src={{ asset("assets/js/mandataire.js") }}></script>{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6">
                <h1>{{ mandataire.firstName }}  {{ mandataire.lastName }}</h1>
                {{ form_start(form) }}
                {{ form_row(form.lastName) }}
                {{ form_row(form.firstName) }}
                {{ form_row(form.email) }}
                {{ form_row(form.submit) }}
            </div>


            <div class="col-md-6">
                <br><br>
                {{ form_row(form.password) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
