{% extends 'base.html.twig' %}

{% block title %}Rent index{% endblock %}

{% block body %}
    <h1>Rent index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>InventoryFile</th>
                <th>ArrivalDate</th>
                <th>DepartureDate</th>
                <th>TenantComments</th>
                <th>TenantSignature</th>
                <th>TenantValidatedAt</th>
                <th>RepresentativeComments</th>
                <th>RepresentativeSignature</th>
                <th>RepresentativeValidatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for rent in rents %}
            <tr>
                <td>{{ rent.id }}</td>
                <td>{{ rent.inventoryFile }}</td>
                <td>{{ rent.arrivalDate ? rent.arrivalDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ rent.departureDate ? rent.departureDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ rent.tenantComments }}</td>
                <td>{{ rent.tenantSignature }}</td>
                <td>{{ rent.tenantValidatedAt ? rent.tenantValidatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ rent.representativeComments }}</td>
                <td>{{ rent.representativeSignature }}</td>
                <td>{{ rent.representativeValidatedAt ? rent.representativeValidatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_rent_show', {'id': rent.id}) }}">show</a>
                    <a href="{{ path('app_rent_edit', {'id': rent.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_rent_new') }}">Create new</a>
{% endblock %}
