{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block assets %}
    <script src={{ asset("assets/js/accueil.js") }}></script>{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6">
                <h2>{{ app.user.firstName }} {{ app.user.lastName }}</h2>
                {% if app.user.roles == ["ROLE_TENANT"] %}
                    <p>Vous êtes inscrit en tant que <strong>locataire</strong> sur la plateforme.</p>
                    <h3>Actions :</h3>
                <ul class="pl">
                    <li><a href="{{ path('app_location_index') }}">Afficher mes locations</a></li>
                    <li><a href="#">Supprimer mon compte</a></li>
                </ul>
                {% elseif app.user.roles == ["ROLE_REPRESENTATIVE"] %}
                    <p>Vous êtes inscrit en tant que <strong>mandataire</strong> sur la plateforme.</p>
                    <h3>Actions :</h3>
                <ul class="pl">
                    <li><a href="{{ path('app_bien_index') }}">Afficher mes biens</a></li>
                    <li><a href="{{ path('app_location_index') }}">Afficher mes locations</a></li>
                    <li><a href="#">Supprimer mon compte</a></li>
                </ul>
                {% elseif app.user.roles == ["ROLE_OWNER"] %}
                    <p>Vous êtes inscrit en tant que <strong>bailleur</strong> sur la plateforme.</p>
                    <h3>Actions :</h3>
                <ul class="pl">
                    <li><a href="{{ path('app_bien_index') }}">Afficher mes biens</a></li>
                    <li><a href="{{ path('app_locataire_index') }}">Afficher mes locataires</a></li>
                    <li><a href="{{ path('app_location_index') }}">Afficher mes locations</a></li>
                    <li><a href="{{ path('app_mandataire_index') }}">Afficher mes mandataires</a></li>
                    <li><a href="#">Supprimer mon compte</a></li>
                </ul>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
