{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block assets %}
    <script src={{ asset("assets/js/accueil.js") }}></script>{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6">
                <h2>White Gordon</h2>
                {% if app.user %}
                    <div class="mb-3">
                        Vous êtes connecté(e) comme
                        {{ app.user.firstName }} {{ app.user.lastName }},
                        <a href="{{ path('app_logout') }}">Me déconnecter</a>
                    </div>
                {% endif %}
                {% if app.user.roles == ["ROLE_TENANT"] %}
                    <p>Vous êtes inscrit en tant que locataire sur la plateforme.</p>
                    <h3>Actions :</h3>
                <ul class="pl">
                    <li><a href="{{ path('app_location_index') }}">Afficher les locations</a></li>
                    <li><a href="#">Supprimer mon compte</a></li>
                </ul>
                {% endif %}
                {% if app.user.roles == ["ROLE_REPRESENTATIVE"] %}
                    <p>Vous êtes inscrit en tant que mandataire sur la plateforme.</p>
                    <h3>Actions :</h3>
                <ul class="pl">
                    <li><a href="{{ path('app_bien_index') }}">Afficher les biens</a></li>
                    <li><a href="{{ path('app_location_index') }}">Afficher les locations</a></li>
                    <li><a href="#">Supprimer mon compte</a></li>
                </ul>
                {% endif %}
                {% if app.user.roles == ["ROLE_OWNER"] %}
                    <p>Vous êtes inscrit en tant que bailleur sur la plateforme.</p>
                    <h3>Actions :</h3>
                <ul class="pl">
                    <li><a href="{{ path('app_mandataire_index') }}">Afficher les mandataires</a></li>
                    <li><a href="{{ path('app_bien_index') }}">Afficher les biens</a></li>
                    <li><a href="{{ path('app_location_index') }}">Afficher les locations</a></li>
                    {{ include('home/_delete_form.html.twig') }}
                    <li><a href="#">Supprimer mon compte</a></li>
                </ul>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
