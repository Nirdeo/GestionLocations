{% extends 'base.html.twig' %}

{% block title %}Gestion des locations{% endblock %}

{% block assets %}
    <script src={{ asset("assets/js/location.js") }}></script>{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6">
                <h1>Mes locations</h1>
                {% for location in locations %}
                    <div class="row">
                        <div class="col-md-6">
                            <img src="{{ asset('assets/img/pexels-1571460.png') }}">
                        </div>
                        <div class="col-md-6">
                            <h1>{{ location.residence.name }}</h1>
                            <p>Du {{ location.arrivalDate|date('d/m/Y') }}
                                au {{ location.departureDate|date('d/m/Y') }}</p>
                            <p>Géré par {{ location.tenant.firstName }} {{ location.tenant.lastName }}</p>
                            <p><a href="{{ path('app_location_show', {'id': location.id}) }}" type="button" class="btn btn-red">Accéder à la location</a></p>
                        </div>
                    </div>
                    <br>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
