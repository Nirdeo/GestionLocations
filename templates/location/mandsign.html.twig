{% extends 'base.html.twig' %}

{% block title %}Hello LocationController!{% endblock %}

{% block body %}
    <section>
        <div class="container mt-4">
            <div class="row">
                <div class="col-md-6">
                    <img src="{{ asset('assets/img/pexels-1571460_bm.png') }}">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Therasa A. White a signé le 12/11/2021.</h4>
                            <h6 class="card-subtitle mb-2 text-muted">Commentaire :</h6>
                            <p class="card-text">Il manque 3 verres. Une ampoule dans le salon ne fonctionne pas.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <h1>Résidence Saint-Vincent</h1>
                    <p>Locataire : Therasa A. White</p>
                    <p>Télécharger le gabarit</p>
                    <form>
                        <div class="mb-3">
                            <label for="exampleInputEmail1" class="form-label">Email address</label>
                            <input type="email" class="form-control" id="exampleInputEmail1"
                                   aria-describedby="emailHelp">
                            <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                        </div>
                        <div class="mb-3">
                            <label for="exampleInputPassword1" class="form-label">Password</label>
                            <input type="password" class="form-control" id="exampleInputPassword1">
                        </div>
                        <div class="mb-3 form-check">
                            <input type="checkbox" class="form-check-input" id="exampleCheck1">
                            <label class="form-check-label" for="exampleCheck1">Check me out</label>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </section>
    <section>
        <div class="container mt-4">
            <div class="row">
                <div class="col-md-12">
                    <i class="fas fa-chevron-right"></i>
                    <div class="card text-white bg-success mb-3" style="max-width: 20rem;">
                        <div class="card-header">Arrivée du locataire</div>
                        <div class="card-body">
                            <h4 class="card-title">Arrivée le 12/11/2021</h4>
                            <p class="card-text">Le locataire est arrivé à la résidence.</p>
                        </div>
                    </div>
                    <div class="card text-white bg-success mb-3" style="max-width: 20rem;">
                        <div class="card-header">Signature de l’inventaire</div>
                        <div class="card-body">
                            <h4 class="card-title">Signé le 12/11/2021</h4>
                            <p class="card-text">par le locataire avec un commentaire.</p>
                        </div>
                    </div>
                    <div class="card text-white bg-success mb-3" style="max-width: 20rem;">
                        <div class="card-header">Signature de l’inventaire</div>
                        <div class="card-body">
                            <h4 class="card-title">Signé le 13/11/2021</h4>
                            <p class="card-text">par le mandataire sans commentaire.</p>
                        </div>
                    </div>
                    <div class="card text-white bg-dark mb-3" style="max-width: 20rem;">
                        <div class="card-header">Signature fin état des lieux de l’inventaire</div>
                        <div class="card-body">
                            <h4 class="card-title">A signer le 15/11/2021</h4>
                            <p class="card-text">par le locataire.</p>
                        </div>
                    </div>
                    <div class="card text-white bg-dark mb-3" style="max-width: 20rem;">
                        <div class="card-header">Signature fin état des lieux de l’inventaire</div>
                        <div class="card-body">
                            <h4 class="card-title">A signer le 15/11/2021</h4>
                            <p class="card-text">par le mandataire.</p>
                        </div>
                    </div>
                    <a type="button" href="" class="btn btn-green">Retour au bien</a>
                </div>
            </div>
        </div>
    </section>
    <script>
        $("#nav-locations").addClass("active")
    </script>
{% endblock %}
