{% extends 'base.html.twig' %}

{% block title %}Gestion des locations{% endblock %}

{% block assets %}<script src={{ asset("assets/js/location.js") }}></script>{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6">
                <img src="{{ asset('assets/img/pexels-1571460_bm.png') }}">
                <img src="{{ asset('uploads/' ~ location.residence.picture) }}">
            </div>
            <div class="col-md-6">
                <h1>{{ location.residence.name }}</h1>
                <p>Locataire : <strong>{{ location.tenant.firstName }} {{ location.tenant.lastName }}</strong></p>
                <p><a class="text-red" href="#">Télécharger</a> le gabarit</p>
            </div>
        </div>
        <div class="row">
            <h1>Synthèse</h1>
            <div class="col-md-2">
                <div class="card text-white bg-success mb-3" style="max-width: 18rem;">
                    <div class="card-header">Arrivée du locataire</div>
                    <div class="card-body">
                        <h5 class="card-title">Arrivée le {{ location.arrivalDate|date('d/m/Y') }}</h5>
                        <p class="card-text">Le locataire est arrivé à la résidence.</p>
                    </div>
                </div>
            </div>
            <div class="arrow">
                <i class="fa-solid fa-chevron-right"></i>
            </div>
            <div class="col-md-2">
                <div class="card text-white bg-success mb-3" style="max-width: 18rem;">
                    <div class="card-header">Signature de l’inventaire</div>
                    <div class="card-body">
                        <h5 class="card-title">Signé le {{ location.firstTenantValidatedAt|date('d/m/Y') }}</h5>
                        <p class="card-text">par le locataire avec un commentaire.</p>
                    </div>
                </div>
            </div>
            <div class="arrow">
                <i class="fa-solid fa-chevron-right"></i>
            </div>
            <div class="col-md-2">
                <div class="card text-white bg-success mb-3" style="max-width: 18rem;">
                    <div class="card-header">Signature de l’inventaire</div>
                    <div class="card-body">
                        <h5 class="card-title">Signé le {{ location.firstRepresentativeValidatedAt|date('d/m/Y') }}</h5>
                        <p class="card-text">par le mandataire sans commentaire.</p>
                    </div>
                </div>
            </div>
            <div class="arrow">
                <i class="fa-solid fa-chevron-right"></i>
            </div>
            <div class="col-md-2">
                <div class="card text-white bg-dark mb-3" style="max-width: 18rem;">
                    <div class="card-header">Signature fin état des lieux de l’inventaire
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">A signer le {{ location.secondTenantValidatedAt|date('d/m/Y') }}</h5>
                        <p class="card-text">par le locataire.</p>
                    </div>
                </div>
            </div>
            <div class="arrow">
                <i class="fa-solid fa-chevron-right"></i>
            </div>
            <div class="col-md-2">
                <div class="card text-white bg-dark mb-3" style="max-width: 18rem;">
                    <div class="card-header">Signature fin état des lieux de l’inventaire
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">A signer le {{ location.secondRepresentativeValidatedAt|date('d/m/Y') }}</h5>
                        <p class="card-text">par le mandataire.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
