{% extends 'base.html.twig' %}

{% block title %}Locataires - Modification{% endblock %}

{% block assets %}
    <script src={{ asset("assets/js/locataire.js") }}></script>{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6">
                <h1>{{ locataire.firstName }}  {{ locataire.lastName }}</h1>
                {{ form_start(form) }}
                {{ form_row(form.lastName) }}
                {{ form_row(form.firstName) }}
                {{ form_row(form.email) }}
                {{ form_row(form.password) }}
                {{ form_row(form.submit) }}
                {{ form_end(form) }}
            </div>
            <div class="col-md-6">
                <h1>Liste des locations <a href="{{ path('app_location_new', {'id': locataire.id}) }}" type="button" class="btn btn-green">Ajouter une location</a></h1>
                {% for location in locations %}
                        <div class="row">
                            <div class="col-md-6">
                                <img src="{{ asset('assets/img/pexels-1571460.png') }}">
                            </div>
                            <div class="col-md-6">
                                <h1>{{ location.residence.name }}</h1>
                                <p>Du {{ location.arrivalDate|date('d/m/Y') }} au {{ location.departureDate|date('d/m/Y') }}</p>
                                <p>Géré par {{ location.tenant.firstName }} {{ location.tenant.lastName }}</p>
                                <p><a href="#" type="button" class="btn btn-red">Accéder à la location</a></p>
                            </div>
                        </div>
                        <br>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
