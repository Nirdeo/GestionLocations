{% extends 'base.html.twig' %}

{% block title %}Residence index{% endblock %}

{% block body %}
    <h1>Residence index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Address</th>
                <th>City</th>
                <th>ZipCode</th>
                <th>Country</th>
                <th>InventoryFile</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for residence in residences %}
            <tr>
                <td>{{ residence.id }}</td>
                <td>{{ residence.name }}</td>
                <td>{{ residence.address }}</td>
                <td>{{ residence.city }}</td>
                <td>{{ residence.zipCode }}</td>
                <td>{{ residence.country }}</td>
                <td>{{ residence.inventoryFile }}</td>
                <td>
                    <a href="{{ path('app_residence_show', {'id': residence.id}) }}">show</a>
                    <a href="{{ path('app_residence_edit', {'id': residence.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_residence_new') }}">Create new</a>
{% endblock %}
